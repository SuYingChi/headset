<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_view"
    android:layout_gravity="bottom"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#192633"
    android:orientation="horizontal"
    android:paddingBottom="20dp"
    android:paddingTop="20dp">


    <ImageView
        android:layout_marginLeft="15dp"
        android:layout_width="28dp"
        android:layout_height="50dp"
        android:src="@drawable/charger_battery" />


    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:rotation="90"
        android:visibility="gone">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/charging_module_push_horizontal" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginEnd="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginTop="4dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_battery1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/charging_module_push_batter_horizontal" />

            <ImageView
                android:id="@+id/img_battery2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/charging_module_push_batter_horizontal" />

            <ImageView
                android:id="@+id/img_battery3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/charging_module_push_batter_horizontal" />

            <ImageView
                android:id="@+id/img_battery4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/charging_module_push_batter_horizontal" />

            <ImageView
                android:id="@+id/img_battery5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/charging_module_push_batter_horizontal" />
        </LinearLayout>

    </FrameLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/charging_module_fast_charging"
                android:textColor="#fff"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/txt_battery_remaining_percent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginStart="3dp"
                android:text="100"
                android:textColor="#0f0"
                android:textSize="12sp"
                android:visibility="gone" />

            <TextView
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:text="%"
                android:textColor="#0f0"
                android:textSize="12sp"
                android:visibility="gone" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_left_time_indicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/charging_module_continuous_charging_left_time_indicator"
                android:textColor="#80ffffff"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/txt_charging_left_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginStart="2dp"
                android:text="1H 20Min"
                android:textColor="#aa00ff00"
                android:textSize="8sp"
                android:visibility="gone" />

        </LinearLayout>

    </LinearLayout>

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/tv_enable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="15dp"
        android:layout_marginEnd="15dp"
        android:background="#00c753"
        android:clickable="true"
        android:gravity="center"
        android:paddingBottom="10dp"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:paddingTop="10dp"
        android:text="@string/enable"
        android:textColor="@android:color/white"
        android:textSize="10sp" />

</LinearLayout>