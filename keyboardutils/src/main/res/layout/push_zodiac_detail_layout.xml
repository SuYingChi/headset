<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/push_zodiac_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <GridLayout
        android:id="@+id/zodiac_star_grid_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:alignmentMode="alignBounds"
        android:numColumns="4"
        android:orientation="horizontal"
        android:paddingBottom="4dp"
        android:paddingTop="4dp"
        android:rowCount="2"
        android:useDefaultMargins="false"
        app:layout_marginLeftPercent="7.5%"
        app:layout_marginRightPercent="7.5%">

        <com.ihs.feature.common.TypefacedTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="start"
            android:text="@string/zodiac_love"
            android:textColor="@color/white"
            android:textSize="12sp"
            app:typeface="@string/aleo_light" />

        <RatingBar
            android:id="@+id/ratingBar_love"
            style="@style/ZodiacRatingStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_marginLeftPercent="2%" />

        <com.ihs.feature.common.TypefacedTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/zodiac_money"
            android:textColor="@color/white"
            android:textSize="12sp"
            app:typeface="@string/aleo_light" />

        <RatingBar
            android:id="@+id/ratingBar_money"
            style="@style/ZodiacRatingStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_marginLeftPercent="2%" />

        <com.ihs.feature.common.TypefacedTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="4dp"
            android:layout_row="1"
            android:text="@string/zodiac_career"
            android:textColor="@color/white"
            android:textSize="12sp"
            app:typeface="@string/aleo_light" />

        <RatingBar
            android:id="@+id/ratingBar_career"
            style="@style/ZodiacRatingStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" />

        <com.ihs.feature.common.TypefacedTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/zodiac_health"
            android:textColor="@color/white"
            android:textSize="12sp"
            app:typeface="@string/aleo_light" />

        <RatingBar
            android:id="@+id/ratingBar_health"
            style="@style/ZodiacRatingStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" />
    </GridLayout>

    <ImageView
        android:id="@+id/brackets_left"
        android:layout_alignLeft="@+id/zodiac_star_grid_view"
        android:layout_alignStart="@+id/zodiac_star_grid_view"
        android:layout_below="@+id/zodiac_star_grid_view"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_brackets_left"
        app:layout_aspectRatio="24.4%"
        app:layout_widthPercent="2.8%" />

    <ImageView
        android:id="@+id/brackets_right"
        android:layout_alignEnd="@+id/zodiac_star_grid_view"
        android:layout_alignRight="@+id/zodiac_star_grid_view"
        android:layout_below="@+id/zodiac_star_grid_view"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_brackets_right"
        app:layout_aspectRatio="24.4%"
        app:layout_widthPercent="2.8%" />

    <com.ihs.feature.common.TypefacedTextView
        android:id="@+id/zodiac_tip_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/zodiac_read_more"
        android:layout_below="@+id/zodiac_star_grid_view"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="4dp"
        android:layout_toEndOf="@+id/brackets_left"
        android:layout_toLeftOf="@+id/brackets_right"
        android:layout_toRightOf="@+id/brackets_left"
        android:layout_toStartOf="@+id/brackets_right"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="2"
        android:text="zodiac tip content"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        app:typeface="@string/aleo_regular"
        tools:ignore="HardcodedText" />

    <com.ihs.feature.common.TypefacedTextView
        android:id="@+id/zodiac_read_more"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/zodiac_tip_content"
        android:layout_alignLeft="@+id/zodiac_tip_content"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/zodiac_tip_content"
        android:layout_alignStart="@+id/zodiac_tip_content"
        android:layout_marginBottom="10dp"
        android:background="#ffdb2e"
        android:gravity="center"
        android:paddingBottom="6dp"
        android:paddingTop="6dp"
        android:text="@string/zodiac_read_more"
        android:textColor="@android:color/black"
        android:textSize="12.3sp" />
</android.support.percent.PercentRelativeLayout>