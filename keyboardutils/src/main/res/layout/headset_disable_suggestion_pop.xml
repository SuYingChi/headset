<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/dialog"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:background="@drawable/headset_pop_window_background"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="bottom"
        android:paddingLeft="20dp"
        android:text="@string/headset_disable_title"
        android:textColor="#dd000000"
        android:textSize="18sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="@string/headset_disable_suggestion_detail"
        android:textColor="#aa000000"
        android:textSize="13sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/headset_disable"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/headset_disable_button"
            android:text="@string/charging_module_alert_close"
            android:textColor="#aa000000"
            android:textSize="16sp" />

        <Button
            android:id="@+id/close_pop_window"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/headset_pop_window_close_button"
            android:text="@string/charging_module_alert_cancel"
            android:textColor="#aa000000"
            android:textSize="16sp" />
    </LinearLayout>
</LinearLayout>
