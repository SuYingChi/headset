<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/push_game"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/push_game_button"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        android:layout_marginEnd="24.7dp"
        android:layout_marginLeft="24.7dp"
        android:layout_marginRight="24.7dp"
        android:layout_marginStart="24.7dp"
        android:background="@drawable/locker_push_dialog_button_background"
        android:text="TRY NOW"
        android:textAllCaps="true"
        android:textColor="#ffffff"
        android:textSize="14sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/game_head_title"
        android:layout_above="@id/push_game_button"
        android:layout_alignEnd="@id/push_game_button"
        android:layout_alignLeft="@id/push_game_button"
        android:layout_alignRight="@id/push_game_button"
        android:layout_alignStart="@id/push_game_button">

        <ImageView
            android:id="@+id/icon"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerVertical="true"
            android:layout_marginTop="17dp"
            android:scaleType="centerInside" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/icon"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/icon"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/icon"
            android:layout_toRightOf="@id/icon">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="15dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/push_game_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:fontFamily="sans-serif-medium"
                    android:maxLines="1"
                    android:text="Black cat"
                    android:textColor="#000000"
                    android:textSize="25sp"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/push_game_subtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:fontFamily="sans-serif"
                    android:lineSpacingExtra="4.3sp"
                    android:maxLines="2"
                    android:text="New Livesticker!"
                    android:textColor="#7f000000"
                    android:textSize="14sp"
                    android:textStyle="normal" />
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/game_head_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/push_game_head_background"
        android:fontFamily="Roboto-Regular"
        android:lineSpacingExtra="12sp"
        android:paddingRight="4dp"
        android:text="@string/push_game_head_title"
        android:textColor="#000000"
        android:textSize="13sp"
        android:textStyle="normal" />
</RelativeLayout>