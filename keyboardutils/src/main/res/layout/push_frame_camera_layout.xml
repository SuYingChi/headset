<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/push_camera"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/push_camera_button"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        android:layout_marginEnd="24.7dp"
        android:layout_marginLeft="24.7dp"
        android:layout_marginRight="24.7dp"
        android:layout_marginStart="24.7dp"
        android:background="@drawable/locker_push_dialog_button_background"
        android:text="@string/push_button_text"
        android:textAllCaps="true"
        android:textColor="#ffffff"
        android:textSize="14sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/push_camera_button"
        android:layout_alignEnd="@id/push_camera_button"
        android:layout_alignLeft="@id/push_camera_button"
        android:layout_alignRight="@id/push_camera_button"
        android:layout_alignStart="@id/push_camera_button">

        <ImageView
            android:id="@+id/icon"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerVertical="true"
            android:layout_marginTop="17dp"
            android:scaleType="centerInside"
            tools:ignore="ContentDescription" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/icon"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/icon"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/icon"
            android:layout_toRightOf="@id/icon">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="15dp"
                android:orientation="vertical"
                tools:ignore="UselessParent">

                <TextView
                    android:id="@+id/push_camera_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:fontFamily="sans-serif-medium"
                    android:maxLines="1"
                    android:text="@string/push_title"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:textStyle="normal"
                    tools:targetApi="jelly_bean" />

                <TextView
                    android:id="@+id/push_camera_subtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:fontFamily="sans-serif"
                    android:lineSpacingExtra="4.3sp"
                    android:maxLines="2"
                    android:text="@string/push_subtitle"
                    android:textColor="#7f000000"
                    android:textSize="14sp"
                    android:textStyle="normal"
                    tools:targetApi="jelly_bean" />
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>