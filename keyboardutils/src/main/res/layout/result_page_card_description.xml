<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/result_card_item_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    android:background="@drawable/material_compat_bg_white"
    android:orientation="vertical"
    tools:ignore="ContentDescription">

    <com.honeycomb.launcher.view.TypefacedTextView
        android:id="@+id/title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="28dp"
        android:layout_marginRight="28dp"
        android:layout_marginTop="25dp"
        android:text="@string/result_page_card_default_boost_plus_title"
        android:textColor="@color/result_card_title"
        android:textSize="20sp"
        app:typeface="@string/roboto_medium"/>

    <com.honeycomb.launcher.view.TypefacedTextView
        android:id="@+id/content_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="19dp"
        android:layout_marginLeft="28dp"
        android:layout_marginRight="28dp"
        android:layout_marginTop="12dp"
        android:text="@string/result_page_card_default_boost_plus_description"
        android:textColor="@color/result_card_content"
        android:textSize="16sp"
        app:typeface="@string/roboto_regular"/>
</LinearLayout>