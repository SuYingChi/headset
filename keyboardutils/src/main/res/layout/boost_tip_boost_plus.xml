<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/boost_tip_boost_plus_container"
    android:layout_width="match_parent"
    android:layout_height="147dp"
    android:gravity="center">

    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="4.7dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="142dp"
            android:background="@drawable/dialog_normal_bg">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/boost_tip_boost_plus_icon"
            android:layout_width="42dp"
            android:layout_height="36dp"
            android:layout_marginTop="27dp"
            android:layout_marginLeft="24dp"
            android:layout_marginStart="24dp"
            tools:ignore="ContentDescription"
            tools:src="@drawable/boost_plus_tip_battery"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/boost_tip_boost_plus_icon"
            android:layout_toRightOf="@id/boost_tip_boost_plus_icon"
            android:layout_marginTop="21dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="vertical">

            <com.ihs.feature.common.TypefacedTextView
                android:id="@+id/boost_tip_boost_plus_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                app:typeface="@string/proxima_nova_semibold"
                tools:text="@string/boost_plus_tip_memory_title"/>

            <com.ihs.feature.common.TypefacedTextView
                android:id="@+id/boost_tip_boost_plus_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:maxLines="2"
                android:textColor="@android:color/black"
                android:textSize="14sp"
                app:typeface="@string/proxima_nova_regular"
                tools:text="@string/boost_plus_tip_memory_desc"/>

        </LinearLayout>

        <TextView
            android:id="@+id/boost_tip_boost_plus_btn"
            android:layout_width="265dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="26dp"
            android:background="@drawable/material_compat_button_bg_blue"
            android:gravity="center"
            android:textAllCaps="true"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            tools:text="@string/boost_plus_tip_memory_btn"/>
    </RelativeLayout>
</RelativeLayout>
