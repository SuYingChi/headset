        <LinearLayout
            android:id="@+id/camera_tips_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerInParent="true"
            android:visibility="invisible">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:src="@drawable/ic_locker_guide_view_tips"/>

            <TextView
                android:textSize="18sp"
                android:text="@string/guide_open_camera"
                android:textColor="#ffffff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_camera_confirm_btn"
                android:textSize="18sp"
                android:text="NEXT"
                android:gravity="center"
                android:background="@drawable/locker_guide_view_button_bg"
                android:textColor="#ffffff"
                android:layout_marginTop="40dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="120dp"
                android:layout_height="40dp"/>

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
