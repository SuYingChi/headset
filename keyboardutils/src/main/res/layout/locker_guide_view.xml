<?xml version="1.0" encoding="utf-8"?>
<com.artw.lockscreen.LockerGuideView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#cc000000">

    <RelativeLayout
        android:id="@+id/guide_camera"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:clipChildren="false"
        android:clipToPadding="false">

        <RelativeLayout
            android:id="@+id/camera_container"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:clipChildren="false"
            android:clipToPadding="false">

            <View
                android:id="@+id/camera_highlight_bg"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:visibility="invisible"
                android:background="@drawable/guide_camera_bg"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="center"
                android:layout_centerInParent="true"
                android:src="@drawable/main_camera"/>

            <ImageView
                android:id="@+id/camera_hand"
                android:layout_width="23dp"
                android:layout_height="27dp"
                android:scaleType="center"
                android:layout_marginLeft="26dp"
                android:layout_marginTop="30dp"
                android:visibility="invisible"
                android:src="@drawable/guide_hand"/>
        </RelativeLayout>

        <ImageView
            android:id="@+id/iv_camera_arrow"
            android:layout_width="60dp"
            android:layout_height="70dp"
            android:scaleType="center"
            android:layout_alignParentRight="true"
            android:layout_above="@id/camera_container"
            android:visibility="invisible"
            android:src="@drawable/guide_arraw"/>

