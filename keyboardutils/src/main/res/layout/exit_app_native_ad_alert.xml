<?xml version="1.0" encoding="utf-8"?>
<com.ihs.keyboardutils.view.RoundedCornerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/exit_alert_root_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    app:rcl_corner_radius="@dimen/design_base_corner_radius">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/native_ad_container"
            style="@style/DesignDialogFrame" />

        <LinearLayout
            android:id="@+id/ll_exit_button"
            style="@style/DesignDialogFrame">
            <TextView
                android:id="@+id/btn_alert_exit"
                android:layout_width="match_parent"
                android:layout_height="@dimen/design_dialog_action_button_height"
                android:layout_marginEnd="@dimen/design_base_padding"
                android:layout_marginStart="@dimen/design_base_padding"
                android:layout_marginBottom="@dimen/design_base_padding"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:text="@string/exit_alert_exit_button_text"
                android:textColor="@color/ad_exit_alert_button_green"
                android:textSize="@dimen/design_dialog_action_button_text_size" />
        </LinearLayout>
    </LinearLayout>
</com.ihs.keyboardutils.view.RoundedCornerLayout>