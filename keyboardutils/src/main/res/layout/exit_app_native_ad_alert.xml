<?xml version="1.0" encoding="utf-8"?>
<com.ihs.keyboardutils.view.RoundedCornerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/exit_alert_root_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    app:rcl_corner_radius="@dimen/design_base_corner_radius">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/native_ad_container"
            style="@style/DesignDialogFrame"
            android:layout_gravity="center_horizontal"
            android:background="@android:color/white" />

        <LinearLayout
            android:id="@+id/ll_exit_button"
            style="@style/DesignDialogFrame"
            android:layout_height="wrap_content"
            android:background="@android:color/white">

            <TextView
                android:id="@+id/btn_alert_exit"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginBottom="7dp"
                android:layout_marginTop="7dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:text="@string/exit_alert_exit_button_text"
                android:textColor="@color/ad_exit_alert_button_green"
                android:textSize="17sp" />
        </LinearLayout>
    </LinearLayout>
</com.ihs.keyboardutils.view.RoundedCornerLayout>