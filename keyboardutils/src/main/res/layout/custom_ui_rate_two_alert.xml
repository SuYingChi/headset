<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rate_alert_dialog_bg_type_two"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rate_first_screen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="28.5dp"
                android:src="@drawable/rate_alert_ui_type_two" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="54dp"
                android:fontFamily="sans-serif-medium"
                android:lineSpacingExtra="-13.6sp"
                android:text="Do you like our App?"
                android:textColor="#000000"
                android:textSize="30sp"
                android:textStyle="normal" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="25.6dp"
                android:layout_marginTop="48.1dp">

                <Button
                    android:id="@+id/first_screen_btn_nope"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:background="@drawable/rate_alert_button_bg_nope"
                    android:fontFamily="sans-serif-medium"
                    android:lineSpacingExtra="-5.6sp"
                    android:text="NOPE"
                    android:textColor="#ffffff"
                    android:textSize="22sp"
                    android:textStyle="normal" />

                <Button
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="37.7dp"
                    android:layout_marginRight="30dp"
                    android:layout_toRightOf="@id/first_screen_btn_nope"
                    android:background="@drawable/rate_alert_button_bg_yes"
                    android:fontFamily="sans-serif-medium"
                    android:lineSpacingExtra="-5.6sp"
                    android:text="YES"
                    android:textColor="#ffffff"
                    android:textSize="22sp"
                    android:textStyle="normal" />
            </RelativeLayout>
        </LinearLayout>

        <android.support.v7.widget.AppCompatImageButton
            android:id="@+id/first_screen_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="6.9dp"
            android:layout_marginTop="6.9dp"
            android:background="@color/transparent"
            android:padding="2dp"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/rate_alert_close_gray" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rate_second_screen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="invisible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="40dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp">

                <ImageView
                    android:layout_width="54dp"
                    android:layout_height="57dp"
                    android:padding="7.5dp"
                    android:src="@drawable/rate_alert_ui_star" />

                <ImageView
                    android:layout_width="54dp"
                    android:layout_height="57dp"
                    android:padding="7.5dp"
                    android:src="@drawable/rate_alert_ui_star" />

                <ImageView
                    android:layout_width="54dp"
                    android:layout_height="57dp"
                    android:padding="7.5dp"
                    android:src="@drawable/rate_alert_ui_star" />

                <ImageView
                    android:layout_width="54dp"
                    android:layout_height="57dp"
                    android:padding="7.5dp"
                    android:src="@drawable/rate_alert_ui_star" />

                <ImageView
                    android:layout_width="54dp"
                    android:layout_height="57dp"
                    android:padding="7.5dp"
                    android:src="@drawable/rate_alert_ui_star" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:layout_gravity="center"
                android:fontFamily="sans-serif"
                android:gravity="center_horizontal"
                android:lineSpacingExtra="6.7sp"
                android:text="Your 5-Star is better than all the money in the world!"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="normal" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginBottom="25.6dp"
                android:layout_marginTop="45.8dp">

                <Button
                    android:id="@+id/second_screen_btn_later"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:background="@drawable/rate_alert_button_bg_nope"
                    android:fontFamily="sans-serif-medium"
                    android:lineSpacingExtra="-5.6sp"
                    android:text="LATER"
                    android:textColor="#ffffff"
                    android:textSize="22sp"
                    android:textStyle="normal" />

                <Button
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="37.7dp"
                    android:layout_marginRight="30dp"
                    android:layout_toRightOf="@id/second_screen_btn_later"
                    android:background="@drawable/rate_alert_button_bg_yes"
                    android:fontFamily="sans-serif-medium"
                    android:lineSpacingExtra="-5.6sp"
                    android:text="5-STAR"
                    android:textColor="#ffffff"
                    android:textSize="22sp"
                    android:textStyle="normal" />
            </RelativeLayout>
        </LinearLayout>

        <android.support.v7.widget.AppCompatImageButton
            android:id="@+id/second_screen_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="6.9dp"
            android:layout_marginTop="6.9dp"
            android:background="@color/transparent"
            android:padding="2dp"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/rate_alert_close_gray" />
    </RelativeLayout>
</FrameLayout>