<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/black_90_transparent"
    android:orientation="vertical">

    <android.support.v7.widget.AppCompatImageView
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_gravity="end"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        app:srcCompat="@drawable/notification_cleaner_app_lock_toolbar_x_svg" />

    <TextView
        android:id="@+id/bottom_tip_content_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:lineSpacingExtra="6dp"
        android:text=""
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:typeface="sans" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp">

        <LinearLayout
            android:id="@+id/bottom_white_area"
            android:layout_width="230dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="16dp"
            android:background="@android:color/white"
            android:minHeight="40dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:src="@mipmap/ic_launcher"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/bottom_white_area_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:text="@string/app_name"
                android:textColor="@color/black_87_transparent"
                android:textSize="12sp" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/bottom_white_area"
            android:layout_alignEnd="@id/bottom_white_area"
            android:layout_marginTop="12dp">

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/bottom_tip_switch_background"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_centerHorizontal="true"
                app:srcCompat="@drawable/notification_cleaner_bottom_tip_switch_bg_svg" />

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/bottom_tip_switch_circle"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginLeft="-13dp"
                android:layout_marginStart="-13dp"
                android:padding="8dp"
                app:srcCompat="@drawable/notification_cleaner_bottom_tip_switch_circle_svg" />

        </RelativeLayout>

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/bottom_tip_hand"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignRight="@id/bottom_white_area"
            android:layout_alignEnd="@id/bottom_white_area"
            android:layout_marginRight="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginTop="33dp"
            app:srcCompat="@drawable/notification_cleaner_bottom_tip_hand_svg" />
    </RelativeLayout>
</LinearLayout>