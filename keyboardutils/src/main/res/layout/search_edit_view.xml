<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/search_edit_text_root_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/darker_gray"
    android:orientation="horizontal">

    <EditText
        android:id="@+id/search_edit_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@null"
        android:hint="@string/search_bar_default_text"
        android:imeOptions="actionSearch"
        android:inputType="text"
        android:paddingBottom="8dp"
        android:paddingLeft="6dp"
        android:paddingStart="6dp"
        android:paddingTop="8dp"
        android:textColor="@android:color/white"
        android:textColorHint="@color/search_divider"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/search_delete_icon"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="?android:attr/selectableItemBackground"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:src="@drawable/ic_close_button_circle" />

    <View
        android:id="@+id/search_divider_view"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="6dp"
        android:layout_marginTop="6dp"
        android:background="@color/search_divider" />

    <ImageView
        android:id="@+id/search_button_image"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="?android:attr/selectableItemBackground"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:src="@drawable/ic_locker_search" />
</LinearLayout>